<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:background="@drawable/color_gradient"
    android:fillViewport="true"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings_white_36dp"
            app:border_color="@color/button_text_color"
            app:border_width="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/options_menu_title"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textColor="@color/button_text_color"
                android:textSize="@dimen/largeTextSize"
                android:textStyle="bold"/>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            card_view:cardBackgroundColor="@color/colorPrimaryDark"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/edit_account_credentials_title"
                    android:textColor="@color/button_text_color"
                    android:textSize="@dimen/textsize" />

                <trac.portableexpensesdiary.basecomponents.AntiMonkeyButton
                    android:id="@+id/editUserBtn"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="@dimen/textsize"
                    fancy:fb_borderColor="@color/button_text_color"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="@color/transparent"
                    fancy:fb_focusColor="#5577bd"
                    fancy:fb_fontIconSize="25sp"
                    fancy:fb_iconPosition="left"
                    fancy:fb_iconResource="@drawable/ic_account_circle_white_36dp"
                    fancy:fb_radius="5dp"
                    fancy:fb_text="@string/edit_account_btn"
                    fancy:fb_textColor="@color/button_text_color"
                    fancy:fb_textGravity="center_horizontal" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            card_view:cardBackgroundColor="@color/colorPrimaryDark"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/change_selected_currency_title"
                    android:textColor="@color/button_text_color"
                    android:textSize="@dimen/textsize" />

                <trac.portableexpensesdiary.basecomponents.AntiMonkeyButton
                    android:id="@+id/changeCurrencyBtn"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="@dimen/textsize"
                    fancy:fb_borderColor="@color/button_text_color"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="@color/transparent"
                    fancy:fb_focusColor="#5577bd"
                    fancy:fb_fontIconSize="25sp"
                    fancy:fb_iconPosition="left"
                    fancy:fb_iconResource="@drawable/ic_attach_money_white_36dp"
                    fancy:fb_radius="5dp"
                    fancy:fb_text="@string/change_currency_btn"
                    fancy:fb_textColor="@color/button_text_color"
                    fancy:fb_textGravity="center_horizontal" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>